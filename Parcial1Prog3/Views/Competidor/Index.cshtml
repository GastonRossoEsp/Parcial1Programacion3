<link rel="stylesheet" href="~/css/site.css" />
@model IEnumerable<Parcial1Prog3.Models.Competidor>

@{
    ViewData["Title"] = "Index";
}
<h1>Competidores Registrados</h1>

<table class="tabla">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Edad</th>
            <th>Ciudad</th>
            <th>Disciplina</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Edad</td>
                <td>@item.Ciudad</td>
                <td>@item.Disciplina.Nombre</td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-primary" href="@Url.Action("Create", "Competidor")">Registrar nuevo competidor</a>